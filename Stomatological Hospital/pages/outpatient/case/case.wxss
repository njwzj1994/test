/* pages/outpatient/case/case.wxss */

page {
  background: #eee;
}

.nav {
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-weight: 500;
  line-height: 120rpx;
  text-align: center;
  background: white;
}
.nav>view{
  width: 50%;
  
}
.art{
  border-bottom: 2rpx solid #999;

}
.show{
  display: block;
}
.hide{
  display: none;
}
.person{
  margin-top: 20rpx;
  padding: 0 30rpx;
  display: flex;
  background: white;
  justify-content: space-between;
  font-size: 35rpx;
  height: 120rpx;
  align-items: center;
  border: 1rpx solid #ddd;
}
.person>view>image{
  width: 20rpx;
  height: 32rpx;
  margin: 0 18rpx ;
}
.number{
  padding: 0 30rpx;
  display: flex;
  background: white;
  justify-content: space-between;
  font-size: 35rpx;
  height: 120rpx;
  align-items: center;
  border: 1rpx solid #ddd;
  margin: 20rpx 0 30rpx 0;
}
.number>image{
  width: 53rpx;
  height: 53rpx;

}
button{
  background: #0066ff;
  color: white;
  width: 90%;
}