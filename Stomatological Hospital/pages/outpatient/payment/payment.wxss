/* pages/outpatient/payment/payment.wxss */

page {
  background: #eee;
}

.title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 30rpx;
  font-size: 38rpx;
  border-bottom: 1rpx solid #eee;
  background: white;
}

.le {
  display: flex;
  justify-content: flex-start;
}

.kl {
  display: flex;
  justify-content: flex-start;
}

.kl>image {
  width: 20rpx;
  height: 33rpx;
  margin: 15rpx;
}

.nav {
  width: 100%;
  height: 120rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  font-weight: 500;
  background: white;
}

.nav>view {
  width: 50%;
  text-align: center;
  line-height: 120rpx;
}

.red {
  border-bottom: 2rpx solid #0080ff;
  color: #0080ff;
}

.default {
  border-bottom: 2rpx solid #fff;
}

.show {
  display: block;
}

.hidden {
  display: none;
}

.cont {
  background: white;
  display: flex;
  justify-content: space-between;
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
}

.itemleft {
  display: flex;
  justify-content: flex-start;
  font-size: 35rpx;
  flex-direction: column;
  color: gray;
}

.middle {
  display: flex;
  justify-content: flex-start;
  font-size: 32rpx;
  flex-direction: column;
  margin-right: 60rpx;
}

.itemright {
  display: flex;
  justify-content: flex-start;
  align-items: center;
}

.itemright>image {
  width: 37rpx;
  height: 21rpx;
}

.foot {
  display: flex;
  justify-content: space-between;
  height: 100rpx;
  padding: 30rpx;
  background: white;
  margin-bottom: 25rpx;
}

.footleft {
  display: flex;
  justify-content: flex-start;
  flex-direction: row;
}

.footright {
  display: flex;
  justify-content: flex-start;
}

.footright>button {
  background: #0080ff;
  text-align: center;
  width: 150rpx;
  height: 55rpx;
  line-height: 55rpx;
  font-size: 33rpx;
  color: white;
}

.shadow {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  background: white;
  padding: 10rpx 0 0 20rpx;
}

.shadow>view {
  display: flex;
  flex-direction: row;
}

.shadow>view>text {
  margin: 10rpx 140rpx 0 10rpx;
  font-size: 35rpx;
}

.shadow>view>text:first-child {
  color: #777;
}

.title1 {
  background: white;
  padding: 20rpx 0 5rpx 20rpx;
}

.title1>text {
  color: #777;
  font-size: 37rpx;
  margin: 15rpx;
}

.hid {
  display: none;
}

.shw {
  display: block;
}

.hid1 {
  display: none;
  animation: slideup 0.5s linear;
}

.shw1 {
  display: block;
  animation: slidedown 0.5s linear;
}

@keyframes slidedown {
  from {
    transform: translateY(0);
  }

  to {
    transform: translateY(100%);
  }
}

@keyframes slideup {
  from {
    transform: translateY(100%);
  }

  to {
    transform: translateY(0);
  }
}
